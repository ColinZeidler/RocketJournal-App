<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle" tools:ignore="NewApi">@style/GreenActionBar</item>
        <item name="actionBarStyle">@style/GreenActionBar</item>

        <item name="android:actionBarTabStyle" tools:ignore="NewApi">@style/GreenTabs</item>
        <item name="actionBarTabStyle">@style/GreenTabs</item>

        <item name="android:actionOverflowButtonStyle" tools:ignore="NewApi">@style/Widget.AppCompat.ActionButton.Overflow</item>
        <item name="actionOverflowButtonStyle">@style/Widget.AppCompat.ActionButton.Overflow</item>

        <item name="android:homeAsUpIndicator" tools:ignore="NewApi">@drawable/abc_ic_ab_back_holo_dark</item>
        <item name="homeAsUpIndicator">@drawable/abc_ic_ab_back_holo_dark</item>

        <item name="android:actionBarTabTextStyle" tools:ignore="NewApi">@style/Widget.AppCompat.Light.ActionBar.TabText.Inverse</item>
        <item name="actionBarTabTextStyle">@style/Widget.AppCompat.Light.ActionBar.TabText.Inverse</item>
    </style>

    <!-- ActionBar style -->
    <style name="GreenActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/primary</item>
        <item name="android:backgroundStacked" tools:ignore="NewApi">@color/highlight</item>

        <item name="background">@color/primary</item>
        <item name="backgroundStacked">@color/highlight</item>
    </style>

    <!-- Tab Style -->
    <style name="GreenTabs"
        parent="@style/Widget.AppCompat.ActionBar.TabView" >
        <item name="android:background">@drawable/tab_indicator_green</item>
        <item name="background">@drawable/tab_indicator_green</item>
    </style>



    <style name="display_text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="table_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/small_text</item>
    </style>

    <style name="table_text.bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="display_text.bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="display_text.medium">
        <item name="android:textSize">@dimen/medium_text</item>
    </style>

    <style name="display_text.secondary">
        <item name="android:textColor">@android:color/secondary_text_light</item>
    </style>
</resources>
